    app:startDestination="@+id/navigation_study">

    <fragment
        android:id="@+id/navigation_study"
        android:name="com.example.ResultTracker.ui.study.StudyFragment"
        android:label="@string/title_study_result"
        tools:layout="@layout/fragment_study" />

    <fragment
        android:id="@+id/navigation_course"
        android:name="com.example.ResultTracker.ui.courses.CourseFragment"
        android:label="@string/title_courses"
